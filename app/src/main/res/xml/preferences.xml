<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TODO: MOVE ALL TO STRING XML STUFFS -->

    <PreferenceCategory
        android:title="Sound Settings">

        <CheckBoxPreference
            android:key="sound_start_preference"
            android:title="Sound Start Enabled"
            android:summary="Enables and Disables Sound Start"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="sound_stop_preference"
            android:title="Sound Stop Enabled"
            android:summary="Enables and Disables Sound Stop"
            android:defaultValue="true"/>

        <EditTextPreference
            android:key="sound_amplitude_preference"
            android:title="Sound Start/Stop Amplitude"
            android:summery="Sets the Amplitude for Sound Start and Stop"
            android:defaultValue="15000"
            android:inputType="number"/>

    </PreferenceCategory>

</PreferenceScreen>